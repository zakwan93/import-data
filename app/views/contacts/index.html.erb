<div class="container mt-5">
  <h2> Import Excel sheet into rails app </h2>
  <hr/>
  <%= link_to "Export contact as spreadsheet", contacts_path(format: "xlsx") %>
  <hr/>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Age</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <th scope="row"><%= contact.id %></th>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.age %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row d-flex justify-content-between">
    <div class="col-md-6 text-right">
      <%= link_to "Add New Entry Manually", new_contact_path %>
    </div>
    <div class="col-md-6 text-left">   
      <%= form_tag import_contacts_path, multipart:true do %>
        <%= file_field_tag :file, required: true, accept: ".xls, .xlsx"  %>
        <%= submit_tag "Upload File" %>
      <% end %>
    </div>
    <h5 class="font-monospace text-center mt-4 p-3 text-warning bg-light">Only can attached .xls and .xlsx file</h5>
  </div>
</div>

<br>

